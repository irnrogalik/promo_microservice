{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "require-jsdoc": "off",
        "new-cap": "off",
        "object-curly-spacing":["error", "always"],
        "max-len": ["error", {"code": 150}],
        "@typescript-eslint/quotes": ["error", "single", { "avoidEscape": true }],
        "@typescript-eslint/semi": ["error", "always"]
    }
}
